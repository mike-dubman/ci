FROM centos:7

RUN yum install -y \
    autoconf \
    automake \
    doxygen \
    file \
    gcc-c++ \
    git \
    glibc-devel \
    libtool \
    make \
    maven \
    numactl-devel \
    rdma-core-devel \
    && yum clean dbcache packages

WORKDIR /github/workspace/proj
COPY .git .git
RUN git reset --hard
